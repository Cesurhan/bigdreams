<h3> Previous Orders </h3>
<br/>
<% if !@orders.nil? %>
  <table>
    <tr>
      <th style="width: 20%">Ordernumber</th>
      <th style="width: 20%">Order date</th>
      <th style="width:20%" class="text-right">Total Price</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td style="width: 20%"><%= link_to "#{order.id}", user_order_path(current_user, order) %></td>
      <td style="width: 20%"><%= order.created_at.to_formatted_s(:long) %></td>
      <td style="width: 20%" class="text-right"><%= number_to_currency(order.total_price, precision: 2, separator: ',', unit: 'â‚¬')%></td>
    </tr>
    <% end %>
  </table>
<% end %>
