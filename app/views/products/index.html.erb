<h1>Dreams</h1>
<hr>
  <div class="row">
    <% @products.each do |product|%>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag product.photo, style: 'height:15em'%>
        <div class="caption">
          <h3><%= product.name %></h3>
          <p><%= product.price%></p>
          <p><%= product.description%></p>
          <p>
            <a href="#" class="btn btn-primary" role="button">Add to Cart</a> <%= link_to "View", product, class: "btn btn-default"%>
          </p>
        </div>
      </div>
    </div>
    <%end%>
  </div>
